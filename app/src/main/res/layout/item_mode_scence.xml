<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <!--子布局控件-->
    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:id="@+id/scence_img"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/yingyuan" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="电影模式"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="场景ID：645"
        android:textColor="#5F000000"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/allLaunch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/ic_button_bg_normal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/ivLaunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="5dp"
            android:src="@drawable/ic_launch" />

        <TextView
            android:id="@+id/text_launch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="启动"
            android:textColor="@color/white"
            android:textSize="22sp" />

    </LinearLayout>
</LinearLayout>
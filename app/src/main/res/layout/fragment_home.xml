<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--通知栏高度：20dp -->
    <com.qmuiteam.qmui.layout.QMUIRelativeLayout
        android:id="@+id/home_head"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:paddingTop="20dp"
        android:background="#57b9f7">

            <ImageView
                android:id="@+id/home_img"
                android:layout_width="47dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/clund" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/home_img"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView8"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/textView9"
                android:text="TextView" />


            <TextView
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/home_img"
                android:layout_alignParentStart="true"
                android:layout_marginStart="105dp"
                android:text="TextView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="113dp"
                android:text="TextView"
                android:textColor="#fff" />

            <TextView
                android:textColor="#fff"
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="有较强降水，建议您选择在室内进行健身休闲运动。" />


    </com.qmuiteam.qmui.layout.QMUIRelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/homere"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>




</LinearLayout>







